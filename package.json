{
  "name": "linear-mcp-server",
  "version": "0.3.1",
  "description": "Linear MCP server",
  "private": true,
  "type": "module",
  "bin": {
    "linear-mcp-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "husky && npm run build",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:debug": "DEBUG_TESTS=1 jest --runInBand --verbose",
    "start": "node build/index.js",
    "setup:claude": "node scripts/setup-claude.mjs",
    "repair:claude": "node scripts/repair-claude-config.mjs",
    "reset:claude": "node scripts/force-reset-claude.mjs",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "dependencies": {
    "@linear/sdk": "^40.0.0",
    "@modelcontextprotocol/sdk": "^1.11.4",
    "dotenv": "^16.5.0",
    "p-throttle": "^8.1.0",
    "pino": "^9.7.0",
    "pino-pretty": "^10.2.3",
    "zod": "^3.25.76"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "tests/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@jest/globals": "^29.7.0",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.19",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.50.1"
  }
}
